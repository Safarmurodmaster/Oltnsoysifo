CREATE TABLE employees (
  id INT AUTO_INCREMENT PRIMARY KEY,
  employeeId VARCHAR(32) UNIQUE,
  firstName VARCHAR(64),
  lastName VARCHAR(64),
  birthDate DATE,
  gender ENUM('male','female'),
  passport VARCHAR(16) UNIQUE,
  phone VARCHAR(20),
  address VARCHAR(128),
  position VARCHAR(64),
  department VARCHAR(64),
  hireDate DATE,
  employmentType ENUM('full','part','contract'),
  salary INT,
  status ENUM('active','on_leave','inactive','pending'),
  photo VARCHAR(255),
  passportScan VARCHAR(255),
  diploma VARCHAR(255),
  workBook VARCHAR(255),
  contract VARCHAR(255),
  insurance VARCHAR(255),
  createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);